{
  "name": "lldex_core",
  "version": "1.0.0",
  "description": "lldex contracts",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "files": [
    "contracts/helpers",
    "contracts/libraries",
    "contracts/interfaces",
    "contracts/mocks",
    "contracts/LimitOrderProtocol.sol",
    "artifacts/contracts/Limit-order-protocol/**/*.json",
    "!artifacts/contracts/Limit-order-protocol/**/*.dbg.json"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "chai": "^4.3.4",
    "dotenv": "^16.0.0",
    "ethereumjs-wallet": "^1.0.2"
  },
  "scripts": {
    "solhint": "./node_modules/.bin/solhint -f table contracts/LLDEX/**/*.sol contracts/LLDEX/*.sol contracts/LLDEX/**/**/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts/LLDEX/**/*.sol contracts/LLDEX/*.sol contracts/LLDEX/**/**/*.sol",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "build": "rm -rf deployments && rm -rf cache && rm -rf artifacts && npx hardhat compile",
    "deploy:hmn_mainnet": "npm run build && npx hardhat deploy --network harmony_mainnet_shard0 --gasprice 50000000000",
    "deploy:hmn_testnet": "npm run build && npx hardhat deploy --network harmony_testnet_shard0",
    "deploy:bsc_testnet": "npm run build && npx hardhat deploy --network bsc_testnet"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-truffle5": "^2.0.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "chai-bn": "^0.3.0",
    "eth-sig-util": "^3.0.1",
    "ethers": "^5.4.4",
    "hardhat": "^2.6.4",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.10.4",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solc": "^0.8.9",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.0-beta.0",
    "web3": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier:solidity"
    }
  }
}
